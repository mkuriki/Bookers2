  <% if @book.errors.any? %>
       <%= @book.errors.count %>件のerrorが発生しました 
       <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
       </ul>
  <% end %> 

<body>
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <div for="inputName">Title</div>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder: @book.title %>
          <div for="inputOpinion">Opinion</div>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
          <%= f.submit "Update Book" %>
          <%= link_to "Show", book_path(@book) %>
          <%= "|" %>
          <%= link_to "Back", edit_book_path(@book) %>
          
        <% end %>
</body>