<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<body>
    <h2>Books</h2>
    <table>
        <tr>
            <th colspan="1"></th>
            <th>title</th>
            <th colspan="1"></th>
            <th>opinion</th>
        </tr>
        <tbody>
           <% @books.each do |book| %>
               <tr>
                 <td><%= link_to image_tag(book.get_image), user_path(current_user) %></td>
                 <td><%= link_to book.title, book_path(book.id) %></td>
                 <th colspan="1"></th>
                 <td><%= book.body %></td>
               </tr>
           <% end %>
        </tbody>
    </table>
    <%= render 'books/info', book: @book, user: @user %>

</body>
