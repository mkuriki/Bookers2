<body>
    <h2>Books</h2>
    <table>
        <tr>
           <th>title</th>
           <th>opinion</th>
        </tr>
        <tbody>
           <% @books.each do |book| %>
               <tr>
                 <td><%= link_to book.title, book_path(book.id) %></td>
                 <td><%= book.body %></td>
               </tr>
           <% end %>
        </tbody>
    </table>
    <div>
        <h2>User Info</h2>
            <div>
              <%= image_tag current_user.get_profile_image(100,100) %>
              <h4> name <%= current_user.name %></h4>
              <h4> introduction <%= current_user.introduction %></h4>
            </div>
        <h2>New Book</h2>
         <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <div class = field><%= f.text_field :title %></div>
            <h4>Opinion</h4>
            <div class = field><%= f.text_area :body %></div>
            <div class = actions><%= f.submit 'Create Book' %></div>
        <% end %>
    </div>   

</body>
