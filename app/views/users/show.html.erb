<p id = "notice"><%= flash[:notice] %></p>

<body>
        <h2>Books</h2>
        <table>
            <tr>
                <th colspan="1"></th>
                <th>title</th>
                <th>opinion</th>
            </tr>
            <tbody>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= link_to image_tag(book.get_image), user_path(@user) %></td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= render 'books/info', book: @new_book, user: @user %>
</body>