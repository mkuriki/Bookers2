<body>
    <h2>Books</h2>
    <table>
        <tr>
           <th>title</th>
           <th>opinion</th>
        </tr>
        <tbody>
           <% @books.each do |book| %>
               <tr>
                 <td><%= link_to book.title, book_path(book.id) %></td>
                 <td><%= book.body %></td>
               </tr>
           <% end %>
        </tbody>
    </table>
</body>